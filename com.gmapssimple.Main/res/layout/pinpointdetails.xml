<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert a link to wikipedia related to your POI or/and a short decription" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the chronological era that belongs to" />
    
     <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/era" >
    

    <RadioButton
        android:id="@+id/byz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Byzantine"/>
	<RadioButton
        android:id="@+id/rom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roman" />
    


</RadioGroup>

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Select the type of the monument" />

     <RadioGroup
         android:id="@+id/type"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >

         <RadioButton
             android:id="@+id/radio0"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             
             android:checked="true"
             android:text="Museum" />

         <RadioButton
             android:id="@+id/radio1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Statue"/>

         <RadioButton
             android:id="@+id/radio2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Archeological Site"/>
     
     
      <RadioButton
             android:id="@+id/radio3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Monument" 
              />
      
      
  </RadioGroup>

     <Button
         android:id="@+id/des"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Submit" />

</LinearLayout>